<% title [@news_cate.name, "成都保险咨询网，您投保的好帮手！"].join(' - ') %>
<% meta_keywords [@news_cate.name,"成都保险咨询"].join(' - ') %>
<% meta_description [@news_cate.name, "成都保险，投保， 保险咨询，保险购买， 商业保险， 中国平安，咨询QQ：29928649"].join(' - ') %>

<h1 class="cate_title"><%= @news_cate.name %></h1>
<div class="cate_banner">
    <%= cate_banner @news_cate.name %>
</div>

<% items1, items2, items3 = @news_items.in_groups_of(25, false) %>
<ul class="category">
<% unless items3.nil? %>
 <% items3.each do |item| %>
     <li class="level_1">
        <h3><%= link_to item.title, news_item_path(item), :target => "_blank", :title => item.title%></h3>
        <div class="level_2">
            <% content = item.summary.blank? ? item.body : item.summary %>
            <%=  strip_tags(content).to_s.gsub(/[ ]+|\s+|\t+|\n+/, '').truncate(200)%>
        </div>
    </li>
 <% end %>
<% end %>
</ul>

<table border=0><tr>
<td width="350px">
<ul class="category">
<% unless items1.nil? %>
 <% items1.each do |item| %>
   <li class="level_1"><%= link_to item.title, news_item_path(item), :target => "_blank", :title => item.title%></li>
 <% end %>
<% end %>
</ul>

</td><td>
<ul class="category">
<% unless items2.nil? %>
 <% items2.each do |item| %>
   <li class="level_1"><%= link_to item.title, news_item_path(item), :target => "_blank", :title => item.title%></li>
 <% end %>
<% end %>
</ul>
</td>
</tr></table>
<br/>
<%= render :partial => "layouts/bshare" %>
<br/>
<%=will_paginate @news_items, :next_label => "下一页", :prev_label => "上一页"%>