/* welcome/top */
.gray{color: #ccc;}
.trend{background:url(<%= asset_path 'icon-trend.gif' %>) no-repeat;height:13px;width:11px;display:inline-block;}
.rise{background-position:0 2px;}
.down{background-position:0 -27px;}
.fair{background-position:0 -58px;}
.detail{background:url(<%= asset_path 'icon-search.gif' %>) no-repeat;height:17px;width:17px;display:inline-block;position:relative;top:4px;*top:1px;}
.detail:hover{background-position:0px -30px;}

div#go-top{
    top: 500px;
    left: 1120px;
    position:fixed;
    _position:absolute;
    background-repeat:repeat-x;
    z-index:3;
}

div#paginate{
  float: right;
}
div#paginate a{
  font-size: 14px;
  font-weight: 500;
  border:1px solid #dddddd;
  _border:1px solid #dddddd;
  padding: 6px;
  margin: 10px 2px;
  background: #eeeeee;
  display: inline;
}
div#paginate span{
  font-size: 14px;
  font-weight: 500;
  border:1px solid #ccc;
  _border:1px solid #ccc;
  padding: 6px;
  margin: 10px 2px;
  background: #dddddd;
  display: inline;
}

/* root page result list*/
.result {}
